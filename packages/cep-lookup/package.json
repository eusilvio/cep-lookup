{
  "name": "@eusilvio/cep-lookup",
  "version": "2.1.2",
  "description": "A modern, flexible, and agnostic CEP lookup library written in TypeScript.",
  "license": "MIT",
  "author": "Silvio Souza",
  "repository": {
    "type": "git",
    "url": "https://github.com/eusilvio/cep-lookup.git",
    "directory": "packages/cep-lookup"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./providers": {
      "require": "./dist/providers/index.js",
      "types": "./dist/src/providers/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --emitDeclarationOnly --outDir dist && esbuild src/index.ts src/providers/index.ts --bundle --platform=node --format=cjs --outdir=dist --minify --external:node:*",
    "test": "jest"
  },
  "devDependencies": {
    "esbuild": "^0.20.2",
    "typescript": "^5.9.2",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
